<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>cartEnter</servlet-name>
        <servlet-class>com.cart.cartEnterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cartEnter</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>cartinsert</servlet-name>
        <servlet-class>com.cart.CartInsert</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cartinsert</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>updatecart</servlet-name>
        <servlet-class>com.cart.UpdateCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updatecart</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>deletecart</servlet-name>
        <servlet-class>com.cart.DeleteCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deletecart</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    
    <servlet>
       <servlet-name>ProductListServlet</servlet-name>
       <servlet-class>com.cart.ProductListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
       <servlet-name>ProductListServlet</servlet-name>
       <url-pattern>/productlist</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>totalPriceServlet</servlet-name>
        <servlet-class>com.cart.totalPriceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>totalPriceServlet</servlet-name>
        <url-pattern>/getTotalPrice</url-pattern>
    </servlet-mapping>
    
 </web-app>